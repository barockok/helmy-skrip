= semantic_form_for [:admin , @admin_user] do |f|
	=f.inputs "Admin Details" do       
		=f.input :email
		=f.input :name                  
		-# =f.input :password               
		-# =f.input :password_confirmation
		-# - if current_admin_user.roles.include?('superadmin')
		.roles
			%label.label Role 
			-for role in AdminUser::ROLES do
				=check_box_tag "admin_user[roles][#{role}]", role, @admin_user.roles.include?(role), {:name => "admin_user[roles][]"}
				=label_tag "admin_user_roles_#{role}", role.humanize
			=hidden_field_tag "admin_user[roles][]", ""
	=f.actions    

