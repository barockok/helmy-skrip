.container.dont-screen
	.row-fluid
		.span1
			=image_tag('icon_brand.png')
		.span11
			%h3.no-bold
				Bank Syariah 
				%b AT-Taqwa
	%hr.bottom-off
.navbar.navbar-fixed-top#topest-bar
	.navbar
		.navbar-inner
			.container
				.logo-brand
					%a{:href => root_url}
						=image_tag('icon_brand.png')
				%a.brand{:href => root_url}
					Bank Syariah 
					%b AT-Taqwa
				.nav-collapse.collapse.navbar-responsive-collapse
					=render 'top_menu'
				%ul.nav.pull-right{:style => 'margin-right:15px'}
					-if current_user
						%li.dropdown
							%a.dropdown-toggle{:href=>"#", 'data-toggle' => "dropdown"}
								%i.icon.icon-user
								%b.caret
							%ul.dropdown-menu
								%li
									=link_to "#{current_user.name.titleize} - #{current_user.roles.first.titleize}", profile_path
								%li.divider
								%li
									=link_to '<i class="icon icon-edit"></i> Edit'.html_safe, edit_profile_path
								%li
									=link_to '<i class="icon icon-unlock"></i> Ubah Password'.html_safe, edit_password_profile_path
								-if can?(:manage, User)
									%li
										=link_to '<i class="icon icon-th-list"></i> Admin Users'.html_safe, users_path

								%li.divider
								%li
									=link_to '<i class="icon icon-off"></i> Keluar'.html_safe, destroy_user_session_path, :method => "delete"
