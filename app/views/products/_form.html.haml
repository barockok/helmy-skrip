= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :first_credit
    = f.number_field :first_credit
  .field
    = f.label :month_credit
    = f.number_field :month_credit
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :months_period
    = f.number_field :months_period
  .field
    = f.label :version
    = f.number_field :version
  .field
    = f.label :code
    = f.text_field :code
  .actions
    = f.submit 'Save'
