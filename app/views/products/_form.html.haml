= form_for @product do |f|
	- if @product.errors.any?
		#error_explanation
			%h3.no-bold= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
			%ul
				- @product.errors.full_messages.each do |msg|
					%li= msg
	.form-horizontal
		.control-group
			= f.label :name, :class => 'control-label'
			.controls
				= f.text_field :name, :class => 'span8'
		.control-group
			= f.label :description, :class => 'control-label'
			.controls
				= f.text_area :description, :class => 'span8', :rows => '5'

		-if @product.nasabahs.count == 0
			.control-group
				= f.label :month_credit, :class => 'control-label'
				.controls
					= f.number_field :month_credit, :class => 'span8'	
			.control-group
				= f.label :months_period, :class => 'control-label'
				.controls
					= f.number_field :months_period, :class => 'span8'
		-if @product.other_versions.count == 1
			.control-group
				= f.label :code, :class => 'control-label'
				.controls
					= f.text_field :code, :class => 'span8'
		.form-actions
			= f.submit 'Save', :class => 'btn'
