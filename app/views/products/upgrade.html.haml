.component-heading
	.row-fluid
		.span8
			%small Ugrade #{@master_product.name} v.#{@product.version}
			%h3.no-bold
				%i.icon.icon-barcode
				=@product.name_version
		.span4
			.pull-right
				= link_to 'Back', products_path, :class => 'btn'


= form_for @product, :url => upgrade_product_path(@master_product) do |f|
	.form-horizontal
		.control-group
			= f.label :name, :class => 'control-label'
			.controls
				= f.text_field :name, :class => 'span8'
		.control-group
			= f.label :month_credit, :class => 'control-label'
			.controls
				= f.number_field :month_credit, :class => 'span8'
				%p.help-block previous version : #{money_formater @master_product.month_credit}
		.control-group
			= f.label :description, :class => 'control-label'
			.controls
				= f.text_area :description, :class => 'span8', :rows => '5'
		.control-group
			= f.label :months_period, :class => 'control-label'
			.controls
				= f.number_field :months_period, :class => 'span8'
				%p.help-block previous version : #{ @master_product.months_period}				
		.form-actions
			= f.submit 'Save', :class => 'btn'
