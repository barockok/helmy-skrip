= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nama_lengkap
    = f.text_field :nama_lengkap
  .field
    = f.label :role_type
    = f.text_field :role_type
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :jabatan
    = f.text_field :jabatan
  .actions
    = f.submit 'Save'
