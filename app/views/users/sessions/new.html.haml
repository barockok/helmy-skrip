=content_for(:heading_page) do
	.row-fluid.branding
		.span.icon-brand-login
			=image_tag('icon_brand.png')
		.span.text-brand-login
			%h1
				%small Bank Syariah
				AT-TAQWA
#login-form
	.center-text
		%h2.no-bold Sign in
		%hr
		= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
			=f.email_field :email, :autofocus => true, :class => 'span12', :placeholder => 'username or email'
			.row-fluid
				.span8
					=f.password_field :password, :class => 'span12'
				.span4
					=f.button '<i class="icon icon-signin"></i> Sign in'.html_safe, :class => 'btn btn-primary btn-block'
		%hr.top-off
		%p=link_to "Forgot your password?", new_password_path(resource_name)
